<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/together_connect"
        style="@style/TextHeadline"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/selector_radius_teal"
        android:text="主动连接"
        android:textColor="@color/text_color_white_primary"/>

    <Button
        android:id="@+id/together_make_discoverable"
        style="@style/TextHeadline"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_radius_yellow"
        android:text="等待连接"
        android:textColor="@color/text_color_white_primary"/>

</LinearLayout>